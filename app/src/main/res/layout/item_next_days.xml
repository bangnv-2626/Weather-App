<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@anim/animation"
    android:outlineSpotShadowColor="@color/color_shadow_cardview"
    app:cardBackgroundColor="@color/color_bg"
    app:cardCornerRadius="@dimen/dp_6"
    app:cardElevation="@dimen/dp_8"
    tools:context=".activites.MainActivity"
    tools:ignore="InvalidId,UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_64sdp"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/txt_divider"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true" />


        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_divider"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:text="Wed, 08/07/2020"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_divider"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:gravity="center_horizontal"
            android:text="Scattered clouds"
            android:textColor="@color/color_description"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:id="@+id/item_image"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@id/item_max_temp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_01n_clear_sky"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/item_max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_divider"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="36°C"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:id="@+id/item_min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_divider"
            android:layout_toEndOf="@id/item_image"
            android:gravity="center_horizontal"
            android:text="30°C"
            android:textColor="@color/color_description"
            android:textSize="@dimen/_18sdp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
